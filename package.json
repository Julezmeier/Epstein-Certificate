{
  "name": "epstein-certificate-app",
  "version": "1.0.0",
  "type": "module",
  "description": "Web app for searching Epstein documents with certificate generation",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "build": "npm run build --workspace=client",
    "start": "node server/src/index.js",
    "vercel-build": "npm run build --workspace=client"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.6.0",
    "pdfkit": "^0.14.0",
    "@napi-rs/canvas": "^0.1.44"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
